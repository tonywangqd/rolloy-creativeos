# Rolloy Creative OS - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# Google Gemini API
# ============================================================================
# Get API key from: https://makersuite.google.com/app/apikey

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================================================
# Flux API (Nano Banana or similar)
# ============================================================================
# Get API key from your image generation service

FLUX_API_KEY=your-flux-api-key-here
FLUX_API_ENDPOINT=https://api.nanobanana.ai/v1/generate

# ============================================================================
# Product Base Images
# ============================================================================
# URLs to your base product images (unfolded and folded states)

NEXT_PUBLIC_UNFOLDED_IMAGE_URL=/images/product-unfolded.png
NEXT_PUBLIC_FOLDED_IMAGE_URL=/images/product-folded.png

# ============================================================================
# NextAuth Configuration (Optional - for future authentication)
# ============================================================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ============================================================================
# Application Settings
# ============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
